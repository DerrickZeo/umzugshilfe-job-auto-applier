# Umzugshilfe Job Auto-Applier Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# UMZUGSHILFE CREDENTIALS
# ===========================================
LOGIN_USERNAME=your-umzugshilfe-username
LOGIN_PASSWORD=your-umzugshilfe-password

# ===========================================
# GMAIL API CONFIGURATION
# ===========================================
# Get these from Google Cloud Console
GMAIL_CLIENT_ID=your-gmail-client-id.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Gmail settings
GMAIL_TARGET_SENDER=job@studenten-umzugshilfe.com
GMAIL_WATCH_LABELS=INBOX

# ===========================================
# AWS CONFIGURATION
# ===========================================
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=123456789012

# Lambda function names (auto-generated based on environment)
MAIN_LAMBDA_FUNCTION=umzugshilfe-job-processor
GMAIL_LAMBDA_FUNCTION=umzugshilfe-gmail-watcher

# DynamoDB table name
JOBS_TABLE=umzugshilfe-jobs

# S3 bucket for Lambda layers
LAYER_BUCKET=umzugshilfe-bot-playwright-${AWS_ACCOUNT_ID}

# SNS topic for error notifications
ERROR_TOPIC_ARN=arn:aws:sns:eu-central-1:${AWS_ACCOUNT_ID}:umzugshilfe-errors
ERROR_NOTIFICATION_EMAIL=your-email@example.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Maximum number of concurrent job applications
MAX_CONCURRENT_JOBS=10

# Processing timeout in seconds
PROCESSING_TIMEOUT=300

# Environment (development, staging, production)
ENVIRONMENT=development

# ===========================================
# PERFORMANCE TUNING
# ===========================================
# Lambda memory allocation (MB)
LAMBDA_MEMORY_SIZE=1536

# Lambda timeout (seconds)
LAMBDA_TIMEOUT=300

# Browser launch timeout (milliseconds)
BROWSER_TIMEOUT=15000

# Page navigation timeout (milliseconds)
PAGE_TIMEOUT=20000

# Element wait timeout (milliseconds)
ELEMENT_TIMEOUT=10000

# ===========================================
# DEBUGGING AND MONITORING
# ===========================================
# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable debug screenshots on errors (true/false)
DEBUG_SCREENSHOTS=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance metrics (true/false)
ENABLE_METRICS=true

# CloudWatch log retention days
LOG_RETENTION_DAYS=14

# ===========================================
# JOB FILTERING (OPTIONAL)
# ===========================================
# Comma-separated list of preferred locations
PREFERRED_LOCATIONS=Köln,Düsseldorf,Aachen,Wuppertal

# Minimum payment threshold (euros)
MIN_PAYMENT=30

# Maximum distance from your location (km)
MAX_DISTANCE=50

# Preferred time slots (morning,afternoon,evening,weekend)
PREFERRED_TIME_SLOTS=morning,afternoon

# Job types to include (comma-separated)
INCLUDE_JOB_TYPES=moving,cleaning,packing

# Job types to exclude (comma-separated)
EXCLUDE_JOB_TYPES=heavy_lifting,long_distance

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Enable IP whitelisting (true/false)
ENABLE_IP_WHITELIST=false

# Allowed IP addresses (comma-separated)
ALLOWED_IPS=192.168.1.0/24

# Enable request signing (true/false)
ENABLE_REQUEST_SIGNING=true

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# RATE LIMITING
# ===========================================
# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=30

# Delay between job applications (milliseconds)
APPLICATION_DELAY=1000

# Maximum retries for failed requests
MAX_RETRIES=3

# Retry delay (milliseconds)
RETRY_DELAY=2000

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Enable success notifications (true/false)
ENABLE_SUCCESS_NOTIFICATIONS=false

# Enable error notifications (true/false)
ENABLE_ERROR_NOTIFICATIONS=true

# Notification channels (email,sms,slack,discord)
NOTIFICATION_CHANNELS=email

# Slack webhook URL (if using Slack notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook URL (if using Discord notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ===========================================
# MONITORING AND ANALYTICS
# ===========================================
# Enable analytics tracking (true/false)
ENABLE_ANALYTICS=true

# Analytics provider (cloudwatch,datadog,newrelic)
ANALYTICS_PROVIDER=cloudwatch

# Custom metrics namespace
METRICS_NAMESPACE=UmzugshilfeBot

# Performance alert thresholds
RESPONSE_TIME_THRESHOLD=5000
ERROR_RATE_THRESHOLD=5
SUCCESS_RATE_THRESHOLD=90

# ===========================================
# BACKUP AND RECOVERY
# ===========================================
# Enable automatic backups (true/false)
ENABLE_BACKUPS=true

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup S3 bucket
BACKUP_BUCKET=umzugshilfe-bot-backups-${AWS_ACCOUNT_ID}

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable local development mode (true/false)
LOCAL_DEVELOPMENT=false

# Local development port
LOCAL_PORT=3000

# Enable hot reload (true/false)
HOT_RELOAD=true

# Mock external services (true/false)
MOCK_SERVICES=false

# Test data directory
TEST_DATA_DIR=./tests/fixtures

# ===========================================
# PLAYWRIGHT SPECIFIC SETTINGS
# ===========================================
# Playwright browsers path (auto-set in Lambda)
PLAYWRIGHT_BROWSERS_PATH=/opt/nodejs/node_modules/playwright-aws-lambda/dist/browsers

# Browser launch arguments (comma-separated)
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Enable browser debugging (true/false)
BROWSER_DEBUG=false

# Browser user agent string
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Browser locale
BROWSER_LOCALE=de-DE

# Browser timezone
BROWSER_TIMEZONE=Europe/Berlin

# Viewport size (width,height)
VIEWPORT_SIZE=1280,720

# ===========================================
# COST OPTIMIZATION
# ===========================================
# Enable cost optimization (true/false)
ENABLE_COST_OPTIMIZATION=true

# Use spot instances for development (true/false)
USE_SPOT_INSTANCES=false

# Automatic scaling settings
MIN_CONCURRENT_EXECUTIONS=0
MAX_CONCURRENT_EXECUTIONS=10

# Reserved capacity units
RESERVED_CAPACITY=0

# ===========================================
# COMPLIANCE AND LEGAL
# ===========================================
# Data retention policy days
DATA_RETENTION_DAYS=90

# Enable GDPR compliance mode (true/false)
GDPR_COMPLIANCE=true

# User consent tracking (true/false)
TRACK_USER_CONSENT=true

# Terms of service URL
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# Privacy policy URL
PRIVACY_POLICY_URL=https://your-domain.com/privacy

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable new feature flags (true/false)
ENABLE_FEATURE_FLAGS=true

# Enable A/B testing (true/false)
ENABLE_AB_TESTING=false

# Feature flag provider (local,launchdarkly,split)
FEATURE_FLAG_PROVIDER=local

# ===========================================
# MAINTENANCE MODE
# ===========================================
# Enable maintenance mode (true/false)
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."

# Maintenance end time (ISO 8601 format)
MAINTENANCE_END_TIME=2025-01-01T12:00:00Z